<div class="container mt-5">
  <h1>Edit Recommendation</h1>
  <p>Here we will add a new recommendation</p>

  <%= simple_form_for(@recommendation) do |form| %>
    <div class="form-inputs">
      <%= form.association :item, placeholder: "Name your recommendation"%>
      <%= form.association :giver, label_method: :nickname, placeholder: "Who gave you this recommendation?"%>
      <%= form.input :comment, placeholder: "Take a quick note about it"%>

  <div class="form-actions mt-4">
    <%= form.button :submit, 'Create Recommendation', :class => "btn btn-sm btn-primary" %>
  </div>

    </div>
  <% end %>

</div>
