<div id="wrapper">



<!-- filter group-->
  <div class="d-flex justify-content-between mx-3 mt-3 my-0">

    <button type="button" class="btn btn-outline-dark btn-filters btn-sm">lists</button>
    <button type="button" class="btn btn-outline-dark btn-filters btn-sm">mendlies</button>
    <button class="btn btn-outline-primary btn-sm btn-filters dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">#categories</button>
      <ul class="dropdown-menu">
        <li>movies</li>
        <li>music</li>
      </ul>
    <button class="btn btn-outline-primary btn-sm btn-filters dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">#friends</button>
      <ul class="dropdown-menu">
        <li>movies</li>
        <li>music</li>
      </ul>
  </div>
<hr>

<!-- number of results-->
  <div class="mx-3 my-0">
    <p>25 results of <strong>#movies</strong></p>
  </div>
<hr>

<!-- lists-->

  <div class="d-flex justify-content-between flex-grow-1 mx-3 my-3 align-items-center">
    <button class="btn-collapse" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
      > my lists
    </button>

    <div><%= link_to "Add new list", new_list_path, class: "btn btn-primary btn-sm",
          style: "--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;" %>
    </div>
  </div>

  <div class="collapse" id="collapseExample">
    <div class="card card-body block-collapse">

        <div class="d-flex row">
      <% @lists.each do |list| %>
          <div class="box-list">
            <%= list.name %>
          </div>
      <% end %>
        </div>

    </div>
  </div>




  </div>




</div>

<h1><strong>Here are all of your recommendations</strong></h1>

  <div>
  <%= link_to "Add new recommendation", new_recommendation_path, class: "btn btn-primary btn-sm",
  style: "--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;" %>
</div>

 <% @recommendations.each do |recommendation| %>

  <div class="card mt-3" style="width: 18rem;">
    <div class="card-body">
      <h4><%= recommendation.item.category.name %></h4>
      <h6><%=recommendation.item.genre %></h6>
      <h5 class="card-title"><%= recommendation.item.title %></h5>
      <p class="card-text">  <%= recommendation.comment %></p>
      <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
  </div>



<% end %>
